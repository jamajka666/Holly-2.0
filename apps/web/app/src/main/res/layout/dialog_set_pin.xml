<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="18dp" android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <EditText
        android:id="@+id/etPin1"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:hint="@string/vault_pin" android:inputType="numberPassword" android:maxLength="12"/>
    <EditText
        android:id="@+id/etPin2"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:hint="@string/vault_pin_again" android:inputType="numberPassword" android:maxLength="12"
        android:layout_marginTop="10dp"/>
</LinearLayout>
