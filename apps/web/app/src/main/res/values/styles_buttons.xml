<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Výchozí (fallback) pro Outlined -->
    <style name="Widget.Holly.MaterialButton.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/holly_neon_green</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/holly_text_primary</item>
    </style>

    <!-- Výchozí (fallback) pro Contained -->
    <style name="Widget.Holly.MaterialButton.Contained" parent="Widget.Material3.Button">
        <!-- Accent nastavíme runtime, ale fallback dáme green -->
        <item name="backgroundTint">@color/holly_neon_green</item>
        <item name="android:textColor">@color/holly_text_primary</item>
        <item name="cornerRadius">18dp</item>
    </style>

</resources>
